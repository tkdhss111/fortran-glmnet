{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with all checks enabled",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized release build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "gfortran-debug",
      "displayName": "GNU gfortran Debug",
      "description": "Debug build with GNU gfortran",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_Fortran_COMPILER": "gfortran"
      }
    },
    {
      "name": "gfortran-release",
      "displayName": "GNU gfortran Release",
      "description": "Optimized release build with GNU gfortran",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_Fortran_COMPILER": "gfortran"
      }
    },
    {
      "name": "ifx-debug",
      "displayName": "Intel ifx Debug",
      "description": "Debug build with Intel ifx compiler",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_Fortran_COMPILER": "ifx"
      }
    },
    {
      "name": "ifx-release",
      "displayName": "Intel ifx Release",
      "description": "Optimized release build with Intel ifx",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_Fortran_COMPILER": "ifx"
      }
    },
    {
      "name": "ifx-release-full",
      "displayName": "Intel ifx Release (Full Optimization)",
      "description": "Maximum performance with Intel ifx, OpenMP, and MKL",
      "inherits": "ifx-release",
      "cacheVariables": {
        "ENABLE_OPENMP": "ON",
        "ENABLE_MKL": "ON",
        "ENABLE_IPO": "ON"
      }
    },
    {
      "name": "ifort-release",
      "displayName": "Intel ifort Release",
      "description": "Optimized release build with Intel ifort (classic)",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_Fortran_COMPILER": "ifort"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "jobs": 4
    },
    {
      "name": "gfortran-debug",
      "configurePreset": "gfortran-debug",
      "inherits": "default"
    },
    {
      "name": "gfortran-release",
      "configurePreset": "gfortran-release",
      "inherits": "default"
    },
    {
      "name": "ifx-debug",
      "configurePreset": "ifx-debug",
      "inherits": "default"
    },
    {
      "name": "ifx-release",
      "configurePreset": "ifx-release",
      "inherits": "default"
    },
    {
      "name": "ifx-release-full",
      "configurePreset": "ifx-release-full",
      "inherits": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gfortran-debug",
      "configurePreset": "gfortran-debug",
      "inherits": "default"
    },
    {
      "name": "gfortran-release",
      "configurePreset": "gfortran-release",
      "inherits": "default"
    },
    {
      "name": "ifx-debug",
      "configurePreset": "ifx-debug",
      "inherits": "default"
    },
    {
      "name": "ifx-release",
      "configurePreset": "ifx-release",
      "inherits": "default"
    },
    {
      "name": "ifx-release-full",
      "configurePreset": "ifx-release-full",
      "inherits": "default"
    }
  ]
}
